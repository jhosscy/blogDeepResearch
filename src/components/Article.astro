---
interface Props {
  title: string;
  description: string;
  date: string;
  id: string;
}

const { title, description, date, id } = Astro.props;
---

<article class="blog-card">
  <div class="card-content">
    <h3 class="post-title">{title}</h3>
    <p class="post-description">{description}</p>
    <div class="card-footer">
      <div class="post-meta">
        <div class="post-date">{date}</div>
      </div>
      <a href={`/blog/${id}`} class="read-more">
        Learn more
        <svg width="16" height="16" viewBox="0 0 24 24">
          <path d="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z"></path>
        </svg>
      </a>
    </div>
  </div>
</article>

<style>
  /* Blog Card Styles */
  .blog-card {
    background-color: var(--card-bg);
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 8px var(--card-shadow);
    transition: box-shadow 0.3s;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .blog-card:hover {
    box-shadow: 0 6px 12px var(--card-shadow);
  }

  .card-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .post-title {
    color: var(--primary-color);
    margin-bottom: 0.75rem;
    font-size: 1.5rem;
  }

  .post-description {
    margin-bottom: 1rem;
    color: var(--text-color);
    flex: 1;
    font-size: 0.95rem;
    font-weight: 300;
    line-height: 1.7;
  }

  .card-footer {
    margin-top: auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    padding-top: 1rem;
  }

  .post-meta {
    font-size: 0.875rem;
  }

  .post-date {
    margin-bottom: 0.25rem;
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    color: var(--primary-color);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s;
    position: relative;
  }

  .read-more:hover {
    color: var(--primary-dark);
  }

  .read-more::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 2px;
    background-color: var(--primary-color);
    bottom: -4px;
    left: 0;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s ease;
  }

  .read-more:hover::after {
    transform: scaleX(1);
  }

  .read-more svg {
    margin-left: 0.5rem;
    fill: var(--primary-color);
  }
</style>
