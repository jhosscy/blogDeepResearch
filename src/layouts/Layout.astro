---
interface Props {
  title: string;
}

const { title } = Astro.props;
const isBlogPage = Astro.url.pathname.startsWith("/blog/")
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;1,300;1,400&family=Source+Sans+Pro:wght@400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
  {isBlogPage && <script src="/scripts.js" defer></script>}
</head>
<body>
  <!-- Header Section -->
  <header>
    <a href="/" class="home-button">
      <svg width="24" height="24" viewBox="0 0 24 24">
        <path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"></path>
      </svg>
      Home
    </a>
    <h1 class="blog-title">Deep Research Blog</h1>
  </header>

  <!-- Main Content Section -->
  <main>
    <slot />
  </main>
</body>
</html>
